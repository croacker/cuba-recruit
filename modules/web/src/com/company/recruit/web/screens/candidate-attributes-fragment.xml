<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <layout>
        <form id="valuesForm" height="200px" align="TOP_LEFT" width="auto">
            <column>
                <textField id="txtLastName" caption="msg://form.lastName">
                    <validators>
                        <notBlank message="msg://error.lastName.blank"/>
                    </validators>
                </textField>
                <textField id="txtMiddleName" caption="msg://form.middleName">
                    <validators>
                        <notBlank message="msg://error.middleName.blank"/>
                    </validators>
                </textField>
                <textField id="txtEmail" caption="msg://form.email">
                    <validators>
                        <notBlank message="msg://error.email.blank"/>
                    </validators>
                </textField>
            </column>
            <column>
                <textField id="txtFirstName" caption="msg://form.firstName">
                    <validators>
                        <notBlank message="msg://error.firstName.blank"/>
                    </validators>
                </textField>
                <textField visible="false"/>
                <textField id="txtAge" caption="msg://form.age" datatype="int">
                    <validators>
                        <positive message="msg://error.age.digit.error"/>
                        <notEmpty message="msg://error.age.empty.error"/>
                    </validators>
                </textField>
            </column>
        </form>
    </layout>
</fragment>
